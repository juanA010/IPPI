<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestTimeActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Extra Time"
        android:padding="16dp"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:text="Start Time"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvInitial"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="time"
            android:textColor="#000000"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:text="End Time"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvFinal"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="time"
            android:textColor="#000000"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:text="Request Time"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tvRequest"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:hint="hour"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:text="Extra Charge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvExtraCharge"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="RM"
            android:textColor="#000000"
            android:textStyle="bold" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:text="Original Charge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvOriCharge"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="RM"
            android:textColor="#000000"
            android:textStyle="bold" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:text="New Charge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNewCharge"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="RM"
            android:textColor="#000000"
            android:textStyle="bold" />


    </LinearLayout>

    <Button
        android:id="@+id/btnRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Request"
        android:textColor="#ffffff" />


</LinearLayout>